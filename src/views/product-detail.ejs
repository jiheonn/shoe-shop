    <% include ./common/foot-meta.ejs %>

    <script>
      // 해당 상품에 대한 색상의 사이즈 가져오기
      $('#product_color').change(e => {
        const p_color = e.target.value

        // Default 값인 경우 실행 X
        if (p_color === 'Color') return false

        const p_id = $('#p_id').text()

        $.ajax({
          url: `/products/${p_id}/size`,
          method: 'GET',
          data: {
            p_color,
          },
          success: data => {
            for (product of data) {
              $('#product_size').append(`
                <option value=${product.p_size}>
                  ${product.p_size}
                </option>
              `)
            }
          },
        })
      })
    </script>
